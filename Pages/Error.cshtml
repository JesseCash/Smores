<section class="section">
    <div class="section-content left-image">
        <img src="/images/yourimage1.jpg" alt="Image 1">
        <div>
            <h1>Header 1</h1>
            <ul>
                <li>Feature 1</li>
                <li>Feature 2</li>
                <li>Feature 3</li>
            </ul>
            <a class="btn" asp-page="/Page1">Learn More</a>
        </div>
    </div>
</section>

<section class="section">
    <div class="section-content right-image">
        <div>
            <h1>Header 2</h1>
            <p>This is a paragraph describing something important about your company or product. Keep it concise and engaging.</p>
            <a class="btn" asp-page="/Page2">Discover More</a>
        </div>
        <img src="/images/yourimage2.jpg" alt="Image 2">
    </div>
</section>

<section class="section">
    <div class="section-content left-image">
        <img src="/images/yourimage3.jpg" alt="Image 3">
        <div>
            <h1>Header 3</h1>
            <p>This section explains another part of the business without lists, just informative text for users to read.</p>
            <a class="btn" asp-page="/Page3">Get Started</a>
        </div>
    </div>
</section>

<section class="reviews-section">
    <h2>What Our Customers Say</h2>
    <div class="carousel">
        <button class="carousel-btn left">&#10094;</button>
        <div class="review-cards">
            <div class="review-card">
                <p>"Great service and experience!"</p>
                <strong>- Alex</strong>
            </div>
            <div class="review-card">
                <p>"Highly recommend to everyone."</p>
                <strong>- Jordan</strong>
            </div>
            <div class="review-card">
                <p>"Outstanding support and quality."</p>
                <strong>- Taylor</strong>
            </div>
        </div>
        <button class="carousel-btn right">&#10095;</button>
    </div>
</section>

<style>
    /* Layout */
    .section {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 50px;
        border-bottom: 1px solid #4CEF2E;
    }

    .section-content {
        display: flex;
        width: 80%;
        gap: 40px;
        align-items: center;
    }

    .left-image img, .right-image img {
        width: 50%;
        border-radius: 10px;
    }

    .left-image > img { order: 1; }
    .right-image > img { order: 2; }

    .left-image > div, .right-image > div {
        flex: 1;
    }

    /* Button */
    .btn {
        display: inline-block;
        background-color: #4CEF2E;
        color: #000;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 5px;
        margin-top: 10px;
    }

    .btn:hover {
        background-color: #3ac022;
    }

    /* Carousel */
    .reviews-section {
        padding: 50px;
        background: #000;
        text-align: center;
    }

    .carousel {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
    }

    .review-cards {
        display: flex;
        gap: 20px;
        overflow: hidden;
    }

    .review-card {
        background-color: #4CEF2E;
        color: #000;
        border-radius: 50%;
        width: 200px;
        height: 200px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 20px;
    }

    .carousel-btn {
        background: none;
        border: none;
        font-size: 2rem;
        color: #4CEF2E;
        cursor: pointer;
        user-select: none;
    }

    .carousel-btn:hover {
        color: #3ac022;
    }
</style>
